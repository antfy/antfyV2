<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.antfyv2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="29"
        android:targetSdkVersion="29" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher_quick_doctor"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_quick_doctor_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.AntfyV2" >
        <activity
            android:name="com.example.antfyv2.NoticiasActivity"
            android:parentActivityName="com.example.antfyv2.HomeActivity"
            android:theme="@style/antfyABTitle" />
        <activity
            android:name="com.example.antfyv2.ConsultasActivity"
            android:parentActivityName="com.example.antfyv2.PerfilActivity"
            android:theme="@style/antfyABTitle" />
        <activity
            android:name="com.example.antfyv2.DateActivity"
            android:parentActivityName="com.example.antfyv2.AgendarActivity"
            android:theme="@style/antfyABTitle" />
        <activity
            android:name="com.example.antfyv2.AgendarActivity"
            android:parentActivityName="com.example.antfyv2.SentindoActivity"
            android:theme="@style/antfyABTitle" />
        <activity
            android:name="com.example.antfyv2.SentindoActivity"
            android:parentActivityName="com.example.antfyv2.HomeActivity"
            android:theme="@style/antfyABTitle" />
        <activity
            android:name="com.example.antfyv2.NotifyActivity"
            android:parentActivityName="com.example.antfyv2.HomeActivity"
            android:theme="@style/antfyABTitle" />
        <activity
            android:name="com.example.antfyv2.PerfilActivity"
            android:parentActivityName="com.example.antfyv2.HomeActivity"
            android:theme="@style/antfyABTitle" />
        <activity
            android:name="com.example.antfyv2.HomeActivity"
            android:theme="@style/antfyABTitle" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.antfyv2.CadastroActivity"
            android:parentActivityName="com.example.antfyv2.MainActivity"
            android:theme="@style/antfyABTitle" />
        <activity
            android:name="com.example.antfyv2.EntrarActivity"
            android:parentActivityName="com.example.antfyv2.MainActivity"
            android:theme="@style/antfyABTitle" />
        <activity
            android:name="com.example.antfyv2.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.antfyv2.ListaDispositivos"
            android:label="Dispositivos Pareados"
            android:theme="@android:style/Theme.Dialog" />
    </application>

</manifest>